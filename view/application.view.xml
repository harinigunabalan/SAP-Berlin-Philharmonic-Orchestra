<core:View controllerName="com.sap.view.application" xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:tile="sap.suite.ui.commons"
	height="100%">
	<Page enableScrolling="false" title="Application" showNavButton="true" navButtonPress="pressBackButton">
	<content>
	
	<Panel>
		<headerToolbar>
			<Toolbar height="3rem">
				<Title text="Please choose your expertise area"/>
				<ToolbarSpacer />
				<Button icon="sap-icon://drop-down-list" press="openSettings" />
			</Toolbar>
		</headerToolbar>
		<content>
		
		<FlexBox justifyContent="Center">
			<HBox>
			<tile:GenericTile 
				size="S" 
				frameType="OneByOne"
				press="pressPiano"
				backgroundImage="/images/piano.jpg">
				<tile:tileContent>
					<tile:TileContent footer="August 21, 2013" size="S">
						<tile:content>
							<tile:NewsContent 
								size="S" 
								contentText="Piano">
							</tile:NewsContent>
						</tile:content>
					</tile:TileContent>
				</tile:tileContent>
			</tile:GenericTile>
			
			<tile:GenericTile 
				size="S" 
				frameType="OneByOne"
				press="pressPiano"
				backgroundImage="/images/guitar.jpg">
				<tile:tileContent>
					<tile:TileContent footer="August 21, 2013" size="S">
						<tile:content>
							<tile:NewsContent 
								size="S" 
								contentText="Guitar">
							</tile:NewsContent>
						</tile:content>
					</tile:TileContent>
				</tile:tileContent>
			</tile:GenericTile>
		</HBox>
	</FlexBox>

			<ToolbarSpacer />

	<FlexBox justifyContent="Center">
			<HBox>
			<tile:GenericTile 
				size="S" 
				frameType="OneByOne"
				press="pressPiano"
				backgroundImage="/images/drums.jpg">
				<tile:tileContent>
					<tile:TileContent footer="August 21, 2013" size="S">
						<tile:content>
							<tile:NewsContent 
								size="S" 
								contentText="Drums">
							</tile:NewsContent>
						</tile:content>
					</tile:TileContent>
				</tile:tileContent>
			</tile:GenericTile>

			<tile:GenericTile 
				size="S" 
				frameType="OneByOne"
				press="pressPiano"
				backgroundImage="/images/violin.jpg">
				<tile:tileContent>
					<tile:TileContent footer="August 21, 2013" size="S">
						<tile:content>
							<tile:NewsContent 
								size="S" 
								contentText="Violin">
							</tile:NewsContent>
						</tile:content>
					</tile:TileContent>
				</tile:tileContent>
			</tile:GenericTile>
		</HBox>
		</FlexBox>
		</content>
	</Panel>
	
	<Button xmlns="sap.m"
		id="id"
		text="View My Applications"
		type="Default"
		width=""
		enabled="true"
		icon=""
		iconFirst="true"
		activeIcon=""
		iconDensityAware="true"
		textDirection="Inherit"
		tap=""
		press="onPressApplicationsButton">
			<tooltip></tooltip> <!-- sap.ui.core.TooltipBase -->
			<dependents></dependents> <!-- sap.ui.core.Control, since 1.19 -->
			
	</Button>
	
	</content>
	</Page>
</core:View>