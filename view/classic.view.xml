		<content>
			<l:VerticalLayout class="sapUiContentPadding" width="100%">
				<l:content>
					<List headerText="Offered Courses">
						<DisplayListItem label="1. Introduction to the volin Music"/>
						<DisplayListItem label="2. Learn Basic"/>
						<DisplayListItem label="3. Go for Advanced Courses"/>
					</List>
				</l:content>
			</l:VerticalLayout>
			<l:VerticalLayout class="sapUiContentPadding" width="100%">
				<l:content>
					<List headerText="Mentor">
						<DisplayListItem label="Jen Meuller"/>
						<DisplayListItem label="David Kopf"/>
					</List>
				</l:content>
			</l:VerticalLayout>
			<l:VerticalLayout class="sapUiContentPadding" width="100%">
				<l:content>
					<List headerText="Chat">
						<DisplayListItem label="Currently Offline"/>
