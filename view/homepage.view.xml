<core:View controllerName="com.sap.view.homepage" xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" xmlns:u="sap.ui.unified" xmlns="sap.m">
	<u:Shell id="myShell">
	<u:user>
        <u:ShellHeadUserItem
          image="sap-icon://person-placeholder"
          username="Iwa"
          press="openSettings" />
      </u:user>
      <u:headEndItems>
      </u:headEndItems>
      
      <u:paneContent>
        <Text text="Lorem ipsum" />
      </u:paneContent>
		<Page title="SAP BERLINER PHILHARMONIKER" width="100%">
			<content width="100%">
				<HBox justifyContent="Center">
					<HBox>
						<Image densityAware="false" src="/img/pic1.jpg">
							<layoutData>
								<FlexItemData growFactor="1"/>
							</layoutData>
						</Image>
					</HBox>
				</HBox>
				<TileContainer height="60%" id="container" tileDelete="handleTileDelete">
					<StandardTile icon="sap-icon://manager" press="onClickApplication" title="Job Application Portal"/>
					<StandardTile icon="sap-icon://e-learning" press="onClickEducation" title="Education"/>
					<StandardTile icon="sap-icon://employee" press="onClickProfile" title="My Profile"/>
					<StandardTile icon="sap-icon://collaborate" press="onClickCollaboration" title="Search and Collaboration"/>
				</TileContainer>
			</content>
		</Page>
	</u:Shell>
</core:View>